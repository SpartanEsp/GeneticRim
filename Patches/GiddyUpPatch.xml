<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="ModCheck.isModLoaded">
				<modName>Giddy-up! Battle Mounts</modName>
				<yourMod>Genetic Rim</yourMod>
			</li>



		<li Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "GR_Ratfallo"]/comps</xpath> 
			<value>
				<li Class="GiddyUpCore.CompProperties_Overlay">
					<overlaySide> 
						<graphicDataDefault>
							<texPath>Things/Pawn/Animal/Rodent/Ratfallo/GR_Ratfallo_Saddle_east</texPath>
						  <graphicClass>Graphic_Single</graphicClass>
						  <drawSize>4</drawSize>
						  <drawRotated>false</drawRotated>
						  <shaderType>MetaOverlay</shaderType>
						</graphicDataDefault>					
					    <offsetDefault>(0,0,0,0)</offsetDefault>
					</overlaySide>
					<overlayFront> 
						<graphicDataDefault>
							<texPath>Things/Pawn/Animal/Rodent/Ratfallo/GR_Ratfallo_Saddle_south</texPath>
						  <graphicClass>Graphic_Single</graphicClass>
						  <drawSize>4</drawSize>
						  <drawRotated>false</drawRotated>
						  <shaderType>MetaOverlay</shaderType>
						</graphicDataDefault>					
					    <offsetDefault>(0,0,0,0)</offsetDefault>
					</overlayFront>
					<overlayBack> 
						<graphicDataDefault>
							<texPath>Things/Pawn/Animal/Rodent/Ratfallo/GR_Ratfallo_Saddle_north</texPath>
						  <graphicClass>Graphic_Single</graphicClass>
						  <drawSize>4</drawSize>
						  <drawRotated>false</drawRotated>
						  <shaderType>MetaOverlay</shaderType>
						</graphicDataDefault>					
					    <offsetDefault>(0,0,0,0)</offsetDefault>
					</overlayBack>
				</li>
				
			</value>
		</li>
		<li Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "GR_Bearalope"]/comps</xpath> 
			<value>
				<li Class="GiddyUpCore.CompProperties_Overlay">
					<overlaySide> 
						<graphicDataDefault>
					<texPath>Things/Pawn/Animal/Bears/Bearalope/GR_Bearalope_Saddle_east</texPath>
						  <graphicClass>Graphic_Single</graphicClass>
						  <drawSize>3</drawSize>
						  <drawRotated>false</drawRotated>
						  <shaderType>MetaOverlay</shaderType>
						</graphicDataDefault>					
					    <offsetDefault>(0,0,0,0)</offsetDefault>
					</overlaySide>
					
				</li>
				
			</value>
		</li>


		



		</operations>
	</Operation>


</Patch>

